{
  "name": "@testdeck/watcher",
  "version": "0.0.6",
  "private": true,
  "description": "Watcher for testdeck",
  "author": "Panayot Cankov",
  "contributors": [
    {
      "name": "silkentrance",
      "url": "https://github.com/silkentrance"
    }
  ],
  "homepage": "https://testdeck.org/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/testdeck/testdeck.git"
  },
  "bin": {
    "testdeck-watch": "bin/testdeck-watch"
  },
  "scripts": {
    "prepare": "tsc",
    "pretest": "tsc",
    "test": "npm run watch",
    "tslint": "tslint --project .",
    "tslint-fix": "tslint --project . --fix",
    "watch": "node ./bin/testdeck-watch ./src/watcher.js -n 1 dist/test.js"
  },
  "files": [
    "bin/testdeck-watch",
    "src/watcher.js",
    "README.md",
    "LICENSE"
  ],
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "dist/index.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "yargs": "^13.2.2",
    "cross-spawn": "^6.0.5",
    "findup-sync": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@testdeck/mocha": "0.0.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
